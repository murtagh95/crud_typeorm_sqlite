<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <%- include('../base/head'); %>
</head>

<body>

  <%- include('../base/navegation', {variant:'-category'}); %>

  <br>
  <section class="container mt-5">
    <div class="row container mt-5" width="100vw">

      <% if(search){ %>
        <div class="text-center">
          <h2>Busca por "<%= search %>"</h2>
        </div>
        <% } else{ %>
          <div class="text-center">
            <h2>Tabla de Categoria</h2>
          </div>
          <% } %>
  
          <!-- Con table-responsive se crea un scroll en la tabla -->
          <div class="table-responsive mt-3">
            <table class="table table-striped">
              <thead class="thead-dark">
                <th scope="col">Nombre</th>
                <th scope="col">Creado</th>
                <th scope="col">Actualizado</th>
                <th scope="col">Acciones</th>
              </thead>
              <tbody>
  
                <% registers.forEach(function(register) { %>
                  <tr>
                    <td>
                      <%= register.name %>
                    </td>
                    <td>
                      <%= register.created_at.toLocaleDateString() %>
                      <%= register.created_at.toLocaleTimeString() %>
                    </td>
                    <td>
                      <%= register.updated_at.toLocaleDateString() %>
                      <%= register.updated_at.toLocaleTimeString() %>
                    </td>
                    <td>
                      <div class="row">
                        <div class="row">
                          <form action="./edit-category" method="GET">
                            <input type="hidden" name="id" value="<%= register.id %>">
                            <button type="submit" class="btn edit-btn"><i class="bi bi-pencil"></i></button>
                          </form>
                        </div>
                        <div class="row"></div>
                        <div class="row">
                          <form action="./delete-category" method="POST">
                            <input type="hidden" name="id" value="<%= register.id %>">
                            <button type="submit" class="btn delete-btn"><i class="bi bi-trash"></i></button>
                          </form>
                        </div>
                      </div>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
            <br>
            <br>
            <div class="float-start">
              <a href="./add-category" class="btn primary-btn">Adicionar Categoria</a>
            </div>
    </div>
  </section>

  <!-- Vendor JS Files -->
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <script src="js/main.js"></script>
</body>

</html>