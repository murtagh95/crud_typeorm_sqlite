    rel="stylesheet">
  <link rel="stylesheet" href="css/style.css">
</head>

<body onload="counter()">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="./"><img src="img/icon.png" alt="Node.js icon" class="nav-icon"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="./">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="./add">Adicionar usu√°rio</a>
          </li>
        </ul>
        <form class="d-flex" action="./search" method="GET">
          <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Buscar" name="search">
          <button class="btn secondary-btn" type="submit">Buscar</button>
        </form>
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="centered text-center" id="message-div">
      <h4>
        <%= message %>
      </h4>
      <h5>
        <div id="timer"></div>
      </h5>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
