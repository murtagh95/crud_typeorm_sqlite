<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <%- include('../base/head'); %>
</head>

<body>

    <header>
        <%- include('../base/navegation', {variant:'-product'}); %>
    </header>
    <br>
    <div class="container container-box">
        <div class="text-center">
            <h2>Info de Imagen</h2>
        </div>
        <br>
        <form action="./edit-image" method="POST">
            <input type="hidden" name="id" value="<%= register.id %>">
            <div class="row">
                <div class="card" style="width: 100%;">
                    <img src="media/img/product/<%= register.name %>" class="card-img-top" alt="Imagen de producto">
                    <div class="card-body">
                        <p class="card-text">
                            <% if(register.is_main){ %>
                                <input type="checkbox" class="form-check-input" name="is_main" id="is_main" value="is_main" checked>
                                <% } else{ %>
                                    <input type="checkbox" class="form-check-input" name="is_main" id="is_main" value="is_main">
                                    <% } %>

                                        <label class="form-check-label" for="is_main">Es imagen principal</label>
                        </p>


                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-6">
                    <div class="float-start">
                        <a href=".." class="btn secondary-btn">Volver al home</a>
                    </div>
                </div>
                <div class="col-6">
                    <div class="float-end">
                        <button type="submit" class="btn primary-btn">Actualizar Imagen</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script src="js/script.js"></script>
</body>

</html>