<div class="conteiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>SignUp</h3>
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST">

                        <div class="form-group">
                            <input type="mail" name="email" placeholder="Mail" class="form-control" autofocus>
                        </div>

                        <div class="form-group">
                            <input type="number" name="phone" placeholder="Telefono" class="form-control">
                        </div>

                        <div class="form-group">
                            <input type="text" name="city" placeholder="Ciudad" class="form-control">
                        </div>

                        <div class="form-group">
                            <input type="text" name="state" placeholder="Estado" class="form-control">
                        </div>

                        <div class="form-group">
                            <input type="text" name="name" placeholder="Nombre" class="form-control">
                        </div>

                        <div class="form-group">
                            <input type="text" name="username" placeholder="&#128100; Username" class="form-control">
                        </div>

                        <div class="form-group">
                            <input type="password" name="password" placeholder="&#x1F512; Password" class="form-control">
                        </div>

                        <div class="form-goup">
                            <button class="btn btn-success btn-block rounded-pill">
                                SignUp
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

