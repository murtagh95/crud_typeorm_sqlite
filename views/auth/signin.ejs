<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../base/head'); %>
</head>

<body>

<%- include('../base/navegation', {variant:'-user'}); %>

<section class="container">
    <%- include('../base/message'); %>

    <div class="conteiner p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <h3>INICIAR SESIÓN</h3>
                    </div>
                    <div class="card-body">
                        <form action="/signin" method="POST">
                            <div class="form-group mt-1">
                                <input type="text" name="username" placeholder="&#128100; Username" required class="form-control">
                            </div>

                            <div class="form-group mt-1">
                                <input type="password" name="password" placeholder="&#x1F512; Password" required class="form-control">
                            </div>

                            <div class="form-group mt-3">
                                <button class="btn btn-success btn-block rounded-pill">
                                    Iniciar sesión
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <p>¿Nuevo en la página? <a href="./signup">Registrate</a> </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Vendor JS Files -->
<script src="public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<script src="public/js/main.js"></script>
<script src="public/js/script.js"></script>
</body>

</html>