<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <%- include('../base/head'); %>
</head>

<body>

<header>
    <%- include('../base/navegation', {variant:'-product'}); %>
</header>
<br>
<div class="container">
    <div class="text-center">
        <h2>Info de Producto</h2>
    </div>
    <br>
    <form action="./edit-product" method="POST"  enctype="multipart/form-data">
        <input type="hidden" name="id" value="<%= register.id %>">
        <div class="row">
            <div class="col-6">
                <label for="name" class="form-label">Nombre</label>
                <input type="text" name="name" id="name" class="form-control" value="<%= register.name %>">
            </div>
            <div class="col-6">
                <label for="price" class="form-label">Precio</label>
                <input type="number" name="price" id="price" class="form-control" value="<%= register.price %>">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-6">
                <label for="category" class="form-label">Categoria</label>
                <select name="category" id="category" class="form-select">
                    <% if( register.category ){ %>
                        <option value="<%= register.category.id %>" selected>
                            <%= register.category.name %>
                        </option>
                    <% } else{ %>  
                        <option value="" selected disabled>Seleccione categoria</option>
                    <% } %>
                    
                    <% categories.forEach(function(category) { %>
                        <% if( register.category ){ %>
                            <% if( register.category.id !== category.id ){ %>
                                <option value="<%= category.id %>">
                                    <%= category.name %>
                                </option>>
                            <% } %> 
                        <% } else{ %>  
                            <option value="<%= category.id %>">
                                <%= category.name %>
                            </option>>
                        <% } %>
                                           
                      <% }) %>
                </select>
            </div>
            <div class="col-6">
                <label for="type" class="form-label">Tipo</label>
                <input type="text" name="type" id="type" class="form-control" value="<%= register.type %>">
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-6">
                <label for="photo" class="form-label">Imagen</label>
                <input type="file" name="photo" id="photo" multiple/>
            </div>
            
        </div>
        <br>
        <div class="row mt-5">
            <div class="col-6">
                <div class="float-start">
                    <a href=".." class="btn secondary-btn">Volver al home</a>
                </div>
            </div>
            <div class="col-6">
                <div class="float-end">
                    <button type="submit" class="btn primary-btn">Actualizar Producto</button>
                </div>
            </div>
        </div>
    </form>
    <div class="row mt-5">
       
        <% if( register.images ){ %>

            <% register.images.forEach(function(image) { %>
                
                <div class="col-6">
                    
                    <div class="card" style="width: 18rem;">
                        <img src="media/img/product/<%= image.name %>" class="card-img-top" alt="Imagen de producto">
                        <div class="card-body">
                            <p class="card-text">
                                <% if(image.is_main){ %>
                                    <input type="checkbox" class="form-check-input" name="is_admin" id="is_admin" value="is_admin"  checked>
                                <% } else{ %>
                                    <input type="checkbox" class="form-check-input" name="is_admin" id="is_admin" value="is_admin">
                                <% } %>
                                
                                <label class="form-check-label" for="is_main">Es imagen principal</label>
                            </p>
                            
                            <form action="./edit-image" method="GET">
                                <input type="hidden" name="id" value="<%= image.id %>">
                                <button type="submit" class="btn btn-primary">Ver/Modificar</button>
                            </form>
                            
                        </div>
                    </div>
                </div>

            <% }) %>

          <% } %>

    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
<script src="js/script.js"></script>
</body>

</html>